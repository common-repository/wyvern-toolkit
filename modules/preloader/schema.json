{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "preloader",
    "type": "object",
    "properties": {
        "active": {
            "type": "boolean",
            "default": false
        },
        "config": {
            "type": "object",
            "properties": {
                "colors": {
                    "type": "object",
                    "properties": {
                        "backgroundColor": {
                            "type": "string",
                            "default": "#1F1D36"
                        },
                        "color1": {
                            "type": "string",
                            "default": "#fff"
                        },
                        "iconSecondaryColor": {
                            "type": "string",
                            "default": "#FF3D00"
                        }
                    }
                },
                "icon": {
                    "type": "string"
                }
            }
        }
    }
}
